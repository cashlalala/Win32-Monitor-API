<Window x:Class="Win32MultiMonitorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mon="clr-namespace:Win32MultiMonitorDemo.Ctrl"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed" Name="MainWin">
    <DockPanel LastChildFill="False">
        <ListView DockPanel.Dock="Top">
            <mon:MonitorInfo x:Name="monInfo"></mon:MonitorInfo>
        </ListView>
        <DockPanel LastChildFill="False" FlowDirection="RightToLeft" Margin="5" DockPanel.Dock="Bottom">
            <Button Name="Stop" Command="{Binding Path=StopDetectCmd, ElementName=MainWin}">Stop Detecting</Button>
            <Button Name="Start" Command="{Binding Path=StartDetectCmd,  ElementName=MainWin}" CommandParameter="{Binding ElementName=MainWin}">Start To Detect</Button>
            <Button Name="Switch" Command="{Binding Path=SwithMachenismCmd, ElementName=MainWin}" CommandParameter="{Binding ElementName=MainWin}">
                Change the machenism to .NET
            </Button>
        </DockPanel>
    </DockPanel>
</Window>
